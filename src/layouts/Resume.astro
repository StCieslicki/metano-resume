---
import Footer from '@components/Footer.astro';
import Navbar from '@components/Navbar.astro';
import { SEO } from 'astro-seo';

import { getLangFromUrl } from "../i18n/utils";
const lang = getLangFromUrl(Astro.url);

export interface LayoutProps {
	title: string;
}

const { title = 'Stanisław Cieślicki' } = Astro.props as LayoutProps;
---

<!DOCTYPE html>
<html lang={lang} class="scroll-smooth" data-testid="html">
	<head>
		<SEO
			title={title}
			description="A heavily optimized description full of well-researched keywords."
		/>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<link href="https://fonts.cdnfonts.com/css/montserrat" rel="stylesheet">
	</head>
	<body
		class="mx-auto max-w-screen-xl bg-white px-5 font-sans text-white dark:bg-black xs:text-[16px] md:text-[18px]"
	>
		<!--<Navbar />-->
		<slot />
		<Footer />
		<style is:global>
			/* Improve Page speed */
			/* https://css-tricks.com/almanac/properties/c/content-visibility/ */
			img {
				content-visibility: auto;
			}
		</style>
	</body>
</html>
