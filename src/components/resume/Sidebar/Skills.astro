---
import { skills } from "../../../data/skills";
import Block from "./Block.astro";
import Bar from "./Bar.astro";

// sort by weight
// const data = skills.sort((a, b) => b.weight - a.weight)

// sort by since
// const data = skills.sort((a, b) => b.since - a.since)

// sort by priority
const data = skills.sort((b, a) => b.priority - a.priority)

---

<Block title="Skills" class="break-inside-avoid-page">
    {
        data.map((item) => (
                <Bar title={item.name} value={item.weight} />
        ))
    }
</Block>
