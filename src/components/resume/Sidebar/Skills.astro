---
import { skills } from "../../../data/skills";
import Block from "./Block.astro";
import Bar from "./Bar.astro";

let data = skills;

// filter out non important skills
data = data
    .filter(item => item.important ? item.important : false)

// sort by priority
data = data
    .sort((b, a) => b.priority - a.priority)

// sort by weight
// data = data
//     .sort((a, b) => b.weight - a.weight)

// sort by since
// data = data
//     .sort((a, b) => b.since - a.since)

---

<Block title="Skills" class="break-inside-avoid-page">
    {
        data.map((item) => (
                <Bar title={item.name} value={item.weight} />
        ))
    }
</Block>
