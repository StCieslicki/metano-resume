---
import { education } from "../../../data/data";
import { preformatDate } from "../../../utils/utils";

const url = Astro.url.toString();
let data = [];

if (url.indexOf('-ext') < 0) {
    data = education.filter((item) => item.summary);
} else {
    data = education;
}

---

<div class="mb-10 pl-10">
    <h1 class="uppercase font-bold text-xl">Education</h1>
    <div class="border-t-4 mb-4 w-11"></div>

    { data.map((item) => (
            <div class="mb-3">
                <div class="text-base"><strong>{item.subject}</strong></div>
                {item.place && <div>{item.place}</div>}
                <div class="text-tiny"><span>{preformatDate(item.since)} â€” {preformatDate(item.until)}</span></div>
                {item.description &&
                    <ul style="list-style-type:disc;" class="ml-10 pt-2 text-xs">
                        {item.description.map((desc) => (
                            <li>{desc}</li>
                        ))}
                    </ul>
                }
            </div>
    ))}

    <div class="border-b-2 border-b-gray mt-3"></div>

</div>